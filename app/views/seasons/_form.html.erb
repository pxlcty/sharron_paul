<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">

    
        
    <%= form_with(model: [@media_collection, @season], class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group row">
            <%= f.label 'season number', class: "col-1 col-form-label text-light" %>
            <div class="col-10">
                <%= f.text_field :season_number, source: @season.season_number, class: "form-control shadow rounded", type: "number", min: "1", placeholder: "Season #",  required: true %>
            </div>

        </div>
        <div class="form-group row">
            <%= f.label :description, class: "col-1 col-form-label text-light" %>
            <div class="col-10">
                <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "Description", required: false %>
            </div>
        </div>

        <div class="form-group row">
            <%= f.label :year, class: "col-1 col-form-label text-light" %>
            <div class="col-2">
                <%= f.text_field :year, class: "form-control shadow rounded", type: "number", min: "1900", maxlength: "4", placeholder: "Year", required: false %>
            </div>
        </div>

        
        <%= f.hidden_field :media_collection_id, source: @season.media_collection_id %>

        <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

        
        <% end %>
        </div>
        <div class="mb-3">
            <%= link_to '[ Cancel and return to media-collection listing ]', media_collections_path, class: "text-info" %>
        </div>

    </div>

</div>