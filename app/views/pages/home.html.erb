<div id="home_wrapper">
<div id="home_container">
    
    <div class="home_content" id="home_content_bio">
    <div class="card" style="width: 24rem;">
    <img class="card-img-top" src='<%=asset_path("bio_large.jpg")%>' alt="Card image cap">
    <div class="card-body">
      
      <p class="card-text">
      <%= @bio.home_bio %>
      </p>
    </div>
    <div class="card-body text-right">
    <button type="button" class="btn btn-secondary" id="home-inquiry-button-text"><%= mail_to 'services@mccracken.nyc', "Booking Inquiries", 
    subject: "Booking Inquiries", 
    body: "Good day Ms Paul, I would be interested in a conversation of booking you for our upcoming event."%></button>  
    </div>
  </div>
    </div>
    
    <div class="home_content" id="home_content_events">

    <% @events.each do |event| %>

      <div class="card" style="width: 24rem;">
        <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
        <div class="card-body">
          <h5 class="card-title black-link-text"><%= link_to event.headline, event_path(event) %></h5>
          <p class="card-text"><%= event.description_short %></p>
        </div>
        <div class="card-body">

        <% unless event.location_url.empty? %>
          <%= link_to event.location_name, event.location_url, class: "card-link" %>
        <% else %>
          <%= event.location_name %>
        <% end %>
      <br />
          <%= event.time.to_formatted_s(:rfc822) %> <%= link_to 'details', event_path(event) %>
        </div>
      </div>

      <% end %>


    </div>


</div></div>